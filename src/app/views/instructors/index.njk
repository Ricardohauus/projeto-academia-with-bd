{% extends "layout.njk" %}

{% block content %}
  <div class="card table-container">
    <a href="/instructors/create">Novo</a>
    <table width="100%">
      <thead>
        <tr>
          <th>Instrutor</th>
          <th>Atendimento</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        {%for instructor in instructors %}
          <tr>
            <td>
              <span class="avatar" style="background:url({{instructor.avatar_url}}) no-repeat center center / cover"></span>
              {{instructor.name}}</td>
            <td>{{instructor.services}}</td>
            <td>
              <a href="/instructors/{{instructor.id}}">Visualizar</a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

{% endblock %}